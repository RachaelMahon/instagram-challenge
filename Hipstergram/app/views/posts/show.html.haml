.posts-wrapper.row
  .post
    .post-head
      .name
        MahonkyTonk
    .image.center-block
      =image_tag @post.image.url(:medium)
    %p.caption
      =@post.caption
    .text-center
      =link_to "Cancel", posts_path
      =link_to "Edit", edit_post_path(@post)
      = link_to "Delete Post", post_path(@post), method: :delete,
data: { confirm: "Are you sure you want to delete this post?" }
  |
  = link_to "cancel", posts_path
